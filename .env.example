# Django Security Configuration
SECRET_KEY=django-insecure-replace-this-with-a-secure-random-key-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# AI Service API Keys (at least one required)
OPENAI_API_KEY=your-openai-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here
COHERE_API_KEY=your-cohere-api-key-here
VERTEX_PROJECT_ID=your-gcp-project-id

# Server Configuration
DJANGO_PORT=8000
DJANGO_HOST=localhost
BACKEND_PORT=8081

# Frontend Configuration  
VITE_API_BASE_URL=http://127.0.0.1:8081/api
VITE_MEDIA_BASE_URL=http://127.0.0.1:8081

# Database Configuration - PostgreSQL with pgvector
DB_ENGINE=postgresql
DB_NAME=easyread
DB_USER=easyread_user
DB_PASSWORD=easyread_password
DB_HOST=localhost
DB_PORT=5432

# AWS Bedrock Configuration 
# Replace with your actual AWS credentials
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION_NAME=us-east-1

# Performance Configuration
# Maximum concurrent similarity searches across the application
MAX_CONCURRENT_SIMILARITY_SEARCHES=4
# Maximum thread pool workers for batch processing
MAX_THREAD_POOL_WORKERS=8  
# Batch chunk size for processing large requests
BATCH_CHUNK_SIZE=50
# Embedding cache timeout in seconds
EMBEDDING_CACHE_TIMEOUT=3600

# For production, set these to your actual domain
# VITE_API_BASE_URL=https://your-domain.com/api
# VITE_MEDIA_BASE_URL=https://your-domain.com
# DEBUG=False
# SECRET_KEY=your-super-secure-production-secret-key-here
# ALLOWED_HOSTS=your-domain.com,www.your-domain.com