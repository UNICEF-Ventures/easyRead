# PostgreSQL Database Configuration for EasyRead
# Copy this to .env or add these variables to your existing .env file

# Database Configuration
DB_ENGINE=postgresql
DB_NAME=easyread
DB_USER=easyread_user
DB_PASSWORD=easyread_password
DB_HOST=localhost
DB_PORT=5432

# Django Database URL (alternative format)
DATABASE_URL=postgresql://easyread_user:easyread_password@localhost:5432/easyread

# Backend Configuration
DJANGO_PORT=8000
DJANGO_HOST=localhost
DJANGO_DEBUG=True

# Frontend Configuration  
VITE_API_BASE_URL=http://localhost:8000/api
VITE_MEDIA_BASE_URL=http://localhost:8000

# Add your existing API keys and other environment variables here
# OPENAI_API_KEY=your_openai_api_key
# COHERE_API_KEY=your_cohere_api_key
# etc...

AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION_NAME=us-east-1
